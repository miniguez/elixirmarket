<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>
  <div class="form-group">
    <%= text_input f, :name, class: "form-control", placeholder: Market.Gettext.gettext "name" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">

    <%= text_input f, :username, class: "form-control", placeholder: Market.Gettext.gettext "username" %>
    <%= error_tag f, :username %>
  </div>

  <div class="form-group">
    <%= text_input f, :password_hash, class: "form-control", placeholder: Market.Gettext.gettext "password" %>
    <%= error_tag f, :password_hash %>
  </div>

  <div class="form-group">
    <%= submit Gettext.gettext(Market.Gettext, "save"), class: "btn btn-primary" %>
  </div>
<% end %>
